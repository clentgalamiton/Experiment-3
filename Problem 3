#include<iostream>

using namespace std;

int main()
{

int size,i;

char array[10];
cout<<"Enter Array Size: "; 
cin>> size;

cout<<"Enter "<<size<< " characters: ";

for (i=0;i<size;i++)
{
cin>>array[i];
}
cout<< "The array size is "<<size<<endl;
cout<< "What you entered in reverse is: ";

for (i = size;i>0;i--){

cout<< array[i-1]<<" ";
}


return 0;
}
